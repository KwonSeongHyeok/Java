package com.kh.test.main;

public class Test08 {
	public static void main(String[] args) {
		// 삼항연산자 익히기
		
		// 두 수 중 큰 수 구하기
		
		int 숫자1 = 20;
		int 숫자2 = 20;
		
		String 더큰수 = (숫자1>숫자2) ? "숫자1이 더 큼" : "숫자2가 더 큼";
		
		System.out.println(더큰수);
		
		
		// 짝수 홀수
		int 숫자3 = 15;
		String 홀짝 = (숫자3 % 2 == 0) ? "짝수" : "홀수";
		
		System.out.println(홀짝);
		
	}
}
